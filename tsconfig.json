{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "charset": "utf8",
        "allowJs": false,
        "strict": true,
        "watch": true,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "lib": [
            "ES2015"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/tsTest"
    ]
}